<% content_for(:title, "#{@post.title} | Hacker News") %>

<div class="row">
  <div class="col-lg-6">
    <h1><%= @post.title %>&nbsp;&nbsp;<small class="label label-sm purple"><%= @post.user.name %></small></h1>
  </div>
</div>

<p><%= @post.content %></p>

<div class="row">
  <div class="col-lg-12 inline">
    <%= link_to "All Posts", posts_path, class: 'btn btn-primary' %>
    <%= link_to "Edit", edit_post_path(@post), class: 'btn btn-warning' %>
    <%= link_to "Delete", post_path(@post),
                          :confirm => "Are you sure?",
                          :method => "delete",
                          :class => "btn btn-danger"%>
  </div>
</div>
